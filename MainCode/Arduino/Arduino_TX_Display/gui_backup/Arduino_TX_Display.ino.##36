//<HMI ReadWrite Functions !Start!>
HardwareSerial HMI_SERIAL(PC11, PC10);
static int16_t HmiOut(char ch)
{
  HMI_SERIAL.write(ch);
  return 0;
}
static int16_t HmiIn()
{
  return HMI_SERIAL.read();
}
//<HMI ReadWrite Functions !End!>

